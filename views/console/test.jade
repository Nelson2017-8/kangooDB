- if (domain == "" || domain == undefined) { domain = "http://localhost:8080/"; }
- if (title == "" || title == undefined) { title = "KangoDB"; }
doctype html
html(lang="es")
    head
        title #{title}
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet", href="#{domain}css/bootstrap.min.css")
        link(rel="shortcut icon", href="#{domain}img/favicon/logo.ico")
        link(rel="stylesheet", href="#{domain}fonts/fontawesome_4/font-awesome.min.css")
        link(rel="stylesheet", href="#{domain}highlight-within-textarea-master/jquery.highlight-within-textarea.css")
        //- link(rel="stylesheet", href="#{domain}css/test.css")
      body
        div( class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm" )
          img(src="#{domain}img/favicon/logo.png", alt="KangoDB", width="50", class="mr-3 ml-4")
          h5( class="my-0 mr-md-auto text-white" ) #{title}
          nav( class="my-2 my-md-0 mr-md-3" )
            a( class="p-2 text-white" href="/" ) Inicio
            a( class="p-2 text-white dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Utilidades
                div.dropdown-menu(aria-labelledby="navbarDropdown")
                  a(class="dropdown-item pt-0 mt-0" href="/converter/html_jade" style="top: -1em; position: relative; line-height: 2em") HTML a Jade
                  //- a(class="dropdown-item pt-0 mt-0" href="/converter/jade_html") Jade a HTML
                  a(class="dropdown-item pt-0 mt-0" href="/console" style="top: -1em; position: relative; line-height: 2em") Consola
                  a(class="dropdown-item pt-0 mt-0" href="/console/javascript" style="top: -1em; position: relative; line-height: 2em") Consola de Javacript
            a( class="p-2 text-white" href="#" ) Support
            a( class="p-2 text-white" href="#" ) Pricing

          a( class="btn btn-light" href="/login" )
           i( class="fa fa-send px-2" )
              span( class="pl-2" ) Comenzar

